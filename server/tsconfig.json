{
  "compilerOptions": {
    "lib": ["es5", "es6", "dom", "es2017", "esnext.asynciterable"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
 
    "sourceMap": true,
    "outDir": "./dist",
    
  },
  "exclude": [
    "typings",
    "node_modules"
  ],
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}